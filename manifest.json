{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "name": "Tabgroupie",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/worker/index.ts",
    "type": "module"
  },
  "action": { "default_popup": "src/popup/index.html" },
  "permissions": ["tabs", "tabGroups", "storage"]
}
